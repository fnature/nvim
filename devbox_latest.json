{
  "packages": {
    "fontconfig": "2.16.2",
    "nodejs": "18.19.0",
    "ripgrep": "13.0.0",
    "rustc": "1.88.0",
    "unzip": "6.0",
    "wl-clipboard": "2.1.0"
  },
  "env": {
    // Corepack ships with Node.js and provides npm, yarn, and pnpm automatically.
    // This avoids needing "npm" in the package list and ensures versions match Node.js.
    "DEVBOX_COREPACK_ENABLED": "true",

    // ****************************************************************
    // ****** On Debian only to fix support for LSP Gitlab-ci-ls ******
    // Force Rust‚Äôs openssl-sys crate NOT to use pkg-config.
    // Debian splits OpenSSL into multiple .pc files (libssl.pc, libcrypto.pc)
    // but does NOT provide a global "openssl.pc". That breaks pkg-config.
    // Setting this tells openssl-sys: "don‚Äôt rely on pkg-config".
    "OPENSSL_NO_PKG_CONFIG": "1",

    // Point Rust to the root of the OpenSSL installation on Debian.
    // On Debian, headers live under /usr/include/openssl
    // and libraries under /usr/lib/x86_64-linux-gnu.
    "OPENSSL_DIR": "/usr",

    // Explicitly tell openssl-sys where to find header files.
    // Needed because the crate couldn‚Äôt locate openssl/opensslconf.h.
    "OPENSSL_INCLUDE_DIR": "/usr/include",

    // Explicitly tell openssl-sys where to find the OpenSSL libraries (libssl, libcrypto).
    "OPENSSL_LIB_DIR": "/usr/lib/x86_64-linux-gnu",

    // Extra include flags for gcc/clang during the build.
    // Debian puts some headers in /usr/include and some in /usr/include/x86_64-linux-gnu.
    // This makes sure both paths are searched.
    "CFLAGS": "-I/usr/include -I/usr/include/x86_64-linux-gnu"
    // ****************************************************************
  },
  "shell": {
    "init_hook": [
      "echo 'üöÄ Neovim dev environment ready'",
    ],
    "scripts": {
      "check-nvim-deps": "echo \"üîç Checking versions...\"; gcc --version | head -n1; node --version; npm --version; rg --version; rustc --version; unzip -v | head -n1; fc-list : family | head -n5; wl-copy --version; go version",
    },
  },
}
